::view-transition-old(root),
::view-transition-new(root)
  animation-duration .3s

body
    padding 0
    margin 0
    color white
    background black

main
    min-height 99vh

.wrapper
    --item-size 20vmin
    --min-item-size 20vmin
    width 100%
    height 100%
    display grid
    place-items center

.item
    --min: calc(var(--item-size) / 100)
    width 100%
    height 100%
    cursor pointer
    min-width var(--item-size)
    min-height var(--item-size)
    border-radius 4vmin
    box-sizing border-box
    border 2px solid white
    backdrop-filter blur(10px)
    background-color rgba(0, 0, 0, .2)
    display grid
    place-items center
    & > *
        width calc(var(--min) * 80)
        height calc(var(--min) * 80)
